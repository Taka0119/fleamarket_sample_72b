= form_for @product do |f|
  %div#picture-box
    %div#previews
      - if @product.persisted?
        - @product.pictures.each_with_index do |picture, i|
          = image_tag picture.content.url, data: {index: i}, width: "100", height: "100"
    = f.fields_for :pictures do |picture|
      %div.js-file_group{data: {index: "= picture.index"}}
        = picture.file_field :content, class: 'js-file'
        %br
        %span.js-remove
          削除
      - if @product.persisted?
        = picture.check_box :_destroy, data:{index: picture.index}, class: 'hidden-destroy'
    - if @product.persisted?
      %div.js-file_group{data: {index: "= @product.pictures.count"}}
        = file_field_tag :content, name: "product[pictures_attributes][#{@product.pictures.count}][content]", class: 'js-file'
        %div.js-remove 
          削除
  商品名
  = f.text_field :name
  %br
  商品の説明
  = f.text_field :description
  %br
  カテゴリー
  %br
  サイズ
  %br
  ブランド
  %br
  商品の状態
  %br
  配送料の負担
  %br
  配送の方法
  %br
  発送元の地域
  %br
  発送までの日数
  %br
  販売価格
  %br
  = f.submit "出品する"
