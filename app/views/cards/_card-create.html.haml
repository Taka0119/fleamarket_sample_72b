.card-main-block
  %h1.card-main-title
    クレジットカード情報入力
  .content__credit-card
    .content__credit-card__inner
      = form_with url: user_cards_path, method: :post, html: { name: "inputForm", id: "card__form" } do |f|
        = f.label :カード番号, class: 'label'
        %span.test-font 必須
        -# %br
        = f.text_field :card_number, type: 'text', class: 'input-number', placeholder: '半角数字のみ', maxlength: "16", id: 'card_number'
        = image_tag 'card-icon/americanExpress', size: '40x30', alt: "クレジットカード画像", class: 'icon'
        = image_tag 'card-icon/dinersClub', size: '40x30', alt: "クレジットカード画像", class: 'icon'
        = image_tag 'card-icon/discover', size: '40x30', alt: "クレジットカード画像", class: 'icon'
        = image_tag 'card-icon/jcb', size: '40x30', alt: "クレジットカード画像", class: 'icon'
        = image_tag 'card-icon/mastercard', size: '40x30', alt: "クレジットカード画像", class: 'icon'
        = image_tag 'card-icon/visa', size: '40x30', alt: "クレジットカード画像", class: 'icon'
        .cards-expire
          = f.label :有効期限, class: 'label'
          %span.test-font 必須
          %br
          .cards-expire__block
            .cards-expire__wrap
              = f.select :exp_month, [["01",1],["02",2],["03",3],["04",4],["05",5],["06",6],["07",7],["08",8],["09",9],["10",10],["11",11],["12",12]],{} , class: 'input-expire', id: 'card_month'
              %span.expire-text 月
              %br
            .cards-expire__wrap2
              = f.select :exp_year, [["20",2020],["21",2021],["22",2022],["23",2023],["24",2024],["25",2025],["26",2026],["27",2027],["28",2028],["29",2029],["30",2030]],{} , class: 'input-expire', id: 'card_year'
              %span.expire-text 年
        .cards-expire
          = f.label :セキュリティコード, class: 'label'
          %span.test-font 必須
          %br
          = f.text_field :cvc, type: 'text', class: 'input-number2', placeholder: 'カード背面4桁もしくは3桁の番号', maxlength: "4", id: 'card_cvc'
        .content-bottom#card_token
          = f.submit '追加する', class: 'content-bottom--add-btn', id: 'token_submit'
          
